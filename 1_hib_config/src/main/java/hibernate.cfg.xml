<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/myhiber</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		<property name="show_sql">true</property>
		<mapping class="com.entity.Student"/>
		<mapping class="com.entity.Address"/>
		<mapping class="com.entity.Question"/>
		<mapping class="com.entity.Answer"/>
		<mapping class="com.entity.Country"/>
		<mapping class="com.entity.StatesOfCountry"/>
	</session-factory>

</hibernate-configuration>